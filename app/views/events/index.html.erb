        <div class="d-flex justify-content-between">
          <h4><%= link_to "#{event.title}", event, class: "text-dark" %></h4>
          <div class="text-info"><%= event.event_date %></div>
        </div>
        <div><%= event.description %></div>
        <%= button(event) %>
      </div>
    <% end %>
  </div>
